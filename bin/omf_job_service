#!/usr/bin/env ruby
# encoding: utf-8
BIN_DIR = File.dirname(File.symlink?(__FILE__) ? File.readlink(__FILE__) : __FILE__)
TOP_DIR = File.join(BIN_DIR, '..')
$: << File.join(TOP_DIR, 'lib')

require 'json'
require 'omf/job_service/server'

DESCR = %{
Start a web server providing an OMF Job Service
}

opts = OMF::JobService::DEF_OPTS

OMF::JobService::Server.new.run(opts)

